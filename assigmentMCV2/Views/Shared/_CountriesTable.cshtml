@model List<CountryView>



    @if (Model.Count == 0)
    {
        <div class="no-countries">
            No Country found ....!
        </div>
    }
    else
    {
        <div class="row py-3">
            <div class="col-3 my-auto fw-bold">Name</div>
            <div class="col-6 my-auto fw-bold">Number of cities</div>
    
        </div>
    }


    @foreach(CountryView country in @Model)
    {
        <div class="row p-3 border-bottom">
            <div class="col-3 my-auto">@country.Name</div>
            <div class="col-6 my-auto">@country.Cities.Count</div>
            <div class="col-3">
                <a class="btn btn-outline-primary" href="#" >Details</a>
                <button onclick="removeCountry('@Url.Action("Delete","Countries",new {id = country.Id})')" type="button" class="btn btn-outline-danger remove">Remove</button>
            </div>
        </div>
    }
