@using assigmentMVC2.Models.ViewModels
@model CountryView

<div class="row pt-2">
    <div class="col-2">@Model.Id</div>
    <div class="col-4">@Model.Name</div>
    <div class="col-3">@Model.Cities.Count</div>
    <div class="col-1"><a asp-action="Details" asp-controller="Countries" asp-route-id="@Model.Id" class="btn btn-success"><i class="bi bi-eye-fill"></i></a></div>
    <div class="col-1"><a asp-action="Edit" asp-controller="Countries" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil-fill"></i></a></div>
    <div class="col-1"><a asp-action="DeleteView" asp-controller="Countries" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a></div>
</div>