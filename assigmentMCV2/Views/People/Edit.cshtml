@using assigmentMVC2.Models.ViewModels
@model assigmentMVC2.Models.ViewModels.CreatePersonView

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CreatePersonViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonName" class="control-label"></label>
                <input asp-for="PersonName" class="form-control" />
                <span asp-validation-for="PersonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>

                <label asp-for="CityCode" class="control-label"></label>
                <select asp-for="CityCode" asp-items=@Model.Cities list="citiesList" class="form-control" />
                <option disabled selected>--Select city--</option>*@
            </div>
            <div class="form-group">
                @*<label asp-for="CityName" class="control-label"></label>
                <select asp-for="Countries" asp-items=@Model.Countries class="form-control">
                <option disabled selected>--Select city--</option>
                </select>*@
                <label asp-for="CityId" class="control-label"></label>
                <select class="form-control" asp-for="CityId">
                    @foreach (CountryView country in Model.Countries)
                    {
                        <optgroup label="@country.Name">
                            @foreach (City city in country.Cities)
                            {
                                if (city.Id == Model.CityId)
                                {
                                    <option value="@city.Id" selected>@city.Name</option>
                                }
                                else
                                {
                                    <option value="@city.Id">@city.Name</option>
                                }
                                
                                
                            }
                        </optgroup>
                    }
                </select>

                <span asp-validation-for="Countries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>